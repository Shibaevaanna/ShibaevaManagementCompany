<Window x:Class="ShibaevaManagementCompany.RequestAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование заявки" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Name="WindowTitle" Text="Добавление новой заявки" 
                           FontSize="20" FontWeight="Bold" 
                           FontFamily="Segoe UI"/>
                <TextBlock Text="Заполните все необходимые поля для создания заявки на ремонт или обслуживание" 
                           FontSize="14" FontFamily="Segoe UI" 
                           Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Address -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Адрес *" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" Name="AddressComboBox" Height="35">
                        <ComboBoxItem Content="ул. Ленина, д. 10, кв. 5"/>
                        <ComboBoxItem Content="ул. Пушкина, д. 25, кв. 12"/>
                        <ComboBoxItem Content="пр. Мира, д. 15, кв. 7"/>
                        <ComboBoxItem Content="ул. Гагарина, д. 8, кв. 3"/>
                        <ComboBoxItem Content="ул. Советская, д. 30, кв. 9"/>
                    </ComboBox>
                </Grid>

                <!-- Applicant Name -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="ФИО заявителя *" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" Name="ApplicantTextBox" Height="35"/>
                </Grid>

                <!-- Phone -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Контактный телефон *" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" Name="PhoneTextBox" Height="35">
                        <TextBox.ToolTip>
                            <ToolTip>
                                <TextBlock Text="Формат: +7(XXX)XXX-XX-XX"/>
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>
                </Grid>

                <!-- Problem Description -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Описание проблемы *" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" Name="DescriptionTextBox" 
                             Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>

                <!-- Assignee -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Ответственный исполнитель" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" Name="AssigneeComboBox" Height="35">
                        <ComboBoxItem Content="Смирнов Петр Иванович"/>
                        <ComboBoxItem Content="Кузнецов Алексей Владимирович"/>
                        <ComboBoxItem Content="Николаев Сергей Михайлович"/>
                        <ComboBoxItem Content="Васильев Игорь Константинович"/>
                        <ComboBoxItem Content="Петров Андрей Сергеевич"/>
                        <ComboBoxItem Content="Иванов Михаил Петрович"/>
                        <ComboBoxItem Content="Сидоров Владимир Владимирович"/>
                    </ComboBox>
                </Grid>

                <!-- Status -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Статус заявки *" FontWeight="Bold"/>
                    <ComboBox Grid.Column="1" Name="StatusComboBox" Height="35">
                        <ComboBoxItem Content="Новая"/>
                        <ComboBoxItem Content="В работе"/>
                        <ComboBoxItem Content="Выполнена"/>
                        <ComboBoxItem Content="Отменена"/>
                    </ComboBox>
                </Grid>

                <!-- Additional Info -->
                <Border Margin="0,20,0,0" Padding="15" Background="#F9F9F9" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Дополнительная информация" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Приоритет" FontWeight="Bold"/>
                            <ComboBox Grid.Column="1" Name="PriorityComboBox" Height="35" SelectedIndex="1">
                                <ComboBoxItem Content="Низкий"/>
                                <ComboBoxItem Content="Средний"/>
                                <ComboBoxItem Content="Высокий"/>
                                <ComboBoxItem Content="Критический"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Дата выполнения" FontWeight="Bold"/>
                            <DatePicker Grid.Column="1" Name="CompletionDatePicker" Height="35"/>
                        </Grid>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Комментарий исполнителя" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Name="CommentTextBox" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F4E8D3" Padding="15" CornerRadius="5" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SaveButton" Content="Сохранить" 
                        Width="120" Height="35" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Отмена" 
                        Width="120" Height="35" Margin="10,0,0,0" 
                        Background="#95A5A6" Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>