<Page x:Class="ShibaevaManagementCompany.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная">

    <Grid Background="{StaticResource WhiteColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Padding="30,20" Background="{StaticResource SecondaryColor}">
            <TextBlock Text="Главная страница" 
                      Style="{StaticResource PageTitleStyle}"/>
        </Border>

        <!-- Содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- Приветствие -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Добро пожаловать!" 
                                  FontSize="{StaticResource XXLargeFontSize}" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Система управления жилым фондом управляющей компании" 
                                  FontSize="{StaticResource LargeFontSize}"
                                  TextWrapping="Wrap"
                                  Foreground="{StaticResource TextSecondaryColor}"/>
                    </StackPanel>
                </Border>

                <!-- Быстрый доступ -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Быстрый доступ" 
                                  FontSize="{StaticResource XLargeFontSize}" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>

                        <WrapPanel>
                            <Button Content="Жилой фонд" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="{StaticResource LargeFontSize}"
                                   Click="BtnQuickBuildings_Click"
                                   Margin="0,0,15,15"/>

                            <Button Content="Квартиры" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="{StaticResource LargeFontSize}"
                                   Click="BtnQuickApartments_Click"
                                   Margin="0,0,15,15"/>

                            <Button Content="Заявки" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="{StaticResource LargeFontSize}"
                                   Click="BtnQuickRequests_Click"
                                   Margin="0,0,15,15"/>

                            <Button Content="История" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="{StaticResource LargeFontSize}"
                                   Click="BtnQuickHistory_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Статистика -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Статистика" 
                                  FontSize="{StaticResource XLargeFontSize}" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Дома -->
                            <Border Grid.Column="0" Style="{StaticResource StatBlockStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalBuildings" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="домов" 
                                              FontSize="{StaticResource SmallFontSize}"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Квартиры -->
                            <Border Grid.Column="1" Style="{StaticResource StatBlockStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalApartments" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="квартир" 
                                              FontSize="{StaticResource SmallFontSize}"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Заявки -->
                            <Border Grid.Column="2" Style="{StaticResource StatBlockStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalRequests" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="заявок" 
                                              FontSize="{StaticResource SmallFontSize}"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Сотрудники -->
                            <Border Grid.Column="3" Style="{StaticResource StatBlockStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalEmployees" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="сотрудников" 
                                              FontSize="{StaticResource SmallFontSize}"
                                              Foreground="{StaticResource WhiteColor}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Последние заявки -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Последние заявки" 
                                  FontSize="{StaticResource XLargeFontSize}" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgRecentRequests" 
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 BorderThickness="0"
                                 RowHeight="35">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" 
                                                  Binding="{Binding RequestID}" 
                                                  Width="50"/>
                                <DataGridTextColumn Header="Адрес" 
                                                  Binding="{Binding Apartments.Buildings.Address}" 
                                                  Width="200"/>
                                <DataGridTextColumn Header="Квартира" 
                                                  Binding="{Binding Apartments.ApartmentNumber}" 
                                                  Width="70"/>
                                <DataGridTextColumn Header="Описание" 
                                                  Binding="{Binding Description}" 
                                                  Width="*"/>
                                <DataGridTextColumn Header="Статус" 
                                                  Binding="{Binding Status}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Дата" 
                                                  Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" 
                                                  Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Content="Все заявки" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               HorizontalAlignment="Right"
                               Margin="0,10,0,0"
                               Click="BtnAllRequests_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>