<Page x:Class="ShibaevaManagementCompany.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Padding="30,20" Background="#F4E8D3" CornerRadius="10,10,0,0">
            <TextBlock Text="Главная страница" 
                      FontSize="28" 
                      FontWeight="Bold"
                      Foreground="#333333"/>
        </Border>

        <!-- Содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30" Spacing="20">

                <!-- Приветствие -->
                <Border Background="#F9F9F9" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Добро пожаловать!" 
                                  FontSize="22" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"
                                  Foreground="#333333"/>
                        <TextBlock Text="Система управления жилым фондом управляющей компании" 
                                  FontSize="16"
                                  TextWrapping="Wrap"
                                  Foreground="#666666"/>
                    </StackPanel>
                </Border>

                <!-- Быстрый доступ -->
                <Border Background="#F9F9F9" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Быстрый доступ" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"
                                  Foreground="#333333"/>

                        <WrapPanel Spacing="15">
                            <Button Content="Жилой фонд" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="16"
                                   Click="BtnQuickBuildings_Click"/>

                            <Button Content="Квартиры" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="16"
                                   Click="BtnQuickApartments_Click"/>

                            <Button Content="Заявки" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="16"
                                   Click="BtnQuickRequests_Click"/>

                            <Button Content="История" 
                                   Width="180" 
                                   Height="80"
                                   FontSize="16"
                                   Click="BtnQuickHistory_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Статистика -->
                <Border Background="#F9F9F9" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Статистика" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"
                                  Foreground="#333333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Дома -->
                            <Border Grid.Column="0" 
                                   Background="#67BA80" 
                                   CornerRadius="5" 
                                   Padding="15"
                                   Margin="5">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalBuildings" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="домов" 
                                              FontSize="14"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Квартиры -->
                            <Border Grid.Column="1" 
                                   Background="#67BA80" 
                                   CornerRadius="5" 
                                   Padding="15"
                                   Margin="5">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalApartments" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="квартир" 
                                              FontSize="14"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Заявки -->
                            <Border Grid.Column="2" 
                                   Background="#67BA80" 
                                   CornerRadius="5" 
                                   Padding="15"
                                   Margin="5">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalRequests" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="заявок" 
                                              FontSize="14"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Сотрудники -->
                            <Border Grid.Column="3" 
                                   Background="#67BA80" 
                                   CornerRadius="5" 
                                   Padding="15"
                                   Margin="5">
                                <StackPanel>
                                    <TextBlock x:Name="txtTotalEmployees" 
                                              Text="0" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="сотрудников" 
                                              FontSize="14"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Последние заявки -->
                <Border Background="#F9F9F9" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Последние заявки" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,15"
                                  Foreground="#333333"/>

                        <DataGrid x:Name="dgRecentRequests" 
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 BorderThickness="0"
                                 RowHeight="35">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" 
                                                  Binding="{Binding RequestID}" 
                                                  Width="50"/>
                                <DataGridTextColumn Header="Адрес" 
                                                  Binding="{Binding Apartments.Buildings.Address}" 
                                                  Width="200"/>
                                <DataGridTextColumn Header="Квартира" 
                                                  Binding="{Binding Apartments.ApartmentNumber}" 
                                                  Width="70"/>
                                <DataGridTextColumn Header="Описание" 
                                                  Binding="{Binding Description}" 
                                                  Width="*"/>
                                <DataGridTextColumn Header="Статус" 
                                                  Binding="{Binding Status}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Дата" 
                                                  Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" 
                                                  Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Content="Все заявки" 
                               HorizontalAlignment="Right"
                               Margin="0,10,0,0"
                               Click="BtnAllRequests_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>