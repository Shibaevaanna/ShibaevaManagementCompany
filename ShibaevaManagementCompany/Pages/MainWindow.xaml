<Window x:Class="ShibaevaManagementCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shibaeva Management Company" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F4E8D3" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Grid.Column="0" Source="/Resources/logo.png" Width="50" Height="50" Margin="0,0,20,0"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" 
                          Text="Shibaeva Management Company" 
                          FontFamily="Segoe UI" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Администратор: " FontFamily="Segoe UI"/>
                    <TextBlock Text="Иванов И.И." FontFamily="Segoe UI" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="#F4E8D3">
                <StackPanel Margin="10">
                    <Button Content="Главная" Height="40" Margin="0,5" Click="HomeButton_Click"/>
                    <Button Content="Заявки" Height="40" Margin="0,5" Click="RequestsButton_Click"/>
                    <Button Content="История заявок" Height="40" Margin="0,5" Click="HistoryButton_Click"/>
                    <Button Content="Платежи" Height="40" Margin="0,5" Click="PaymentsButton_Click"/>
                    <Button Content="Долги" Height="40" Margin="0,5" Click="DebtsButton_Click"/>
                    <Button Content="Сотрудники" Height="40" Margin="0,5" Click="EmployeesButton_Click"/>
                    <Button Content="Дома" Height="40" Margin="0,5" Click="BuildingsButton_Click"/>
                    <Button Content="Квартиры" Height="40" Margin="0,5" Click="ApartmentsButton_Click"/>
                    <Button Content="Отчеты" Height="40" Margin="0,10,0,0" Background="#4A90E2"/>
                    <Button Content="Настройки" Height="40" Margin="0,5" Background="#4A90E2"/>
                    <Button Content="Выход" Height="40" Margin="0,5" Background="#E74C3C" Click="ExitButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Frame -->
            <Frame Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>