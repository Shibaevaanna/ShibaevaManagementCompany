<Window x:Class="ShibaevaManagementCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управляющая компания" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="900">

    <Grid Background="{StaticResource SecondaryColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="{StaticResource WhiteColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логотип и название -->
                <Border Grid.Row="0" Padding="20" Background="{StaticResource SecondaryColor}">
                    <StackPanel>
                        <TextBlock Text="🏢" 
                                  FontSize="40"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Управляющая компания" 
                                  FontSize="{StaticResource LargeFontSize}" 
                                  FontWeight="Bold"
                                  TextAlignment="Center"
                                  Foreground="{StaticResource TextColor}"/>
                    </StackPanel>
                </Border>

                <!-- Меню навигации -->
                <StackPanel Grid.Row="1" Margin="10,20,10,0">
                    <Button x:Name="btnHome" 
                           Content="Главная" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnHome_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnBuildings" 
                           Content="Жилой фонд" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnBuildings_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏢" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnApartments" 
                           Content="Квартиры" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnApartments_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnServiceRequests" 
                           Content="Заявки на ремонт" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnServiceRequests_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnRequestHistory" 
                           Content="История заявок" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnRequestHistory_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>

                <!-- Информация о пользователе -->
                <Border Grid.Row="2" Padding="15" Background="{StaticResource SecondaryColor}">
                    <StackPanel>
                        <TextBlock Text="Администратор" 
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="Управляющая компания" 
                                  FontSize="{StaticResource SmallFontSize}"
                                  Foreground="{StaticResource TextSecondaryColor}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Правая часть с содержимым -->
        <Border Grid.Column="1" Margin="10" Background="{StaticResource WhiteColor}">
            <Frame x:Name="MainFrame" 
                  NavigationUIVisibility="Hidden"
                  BorderThickness="0"/>
        </Border>
    </Grid>
</Window>