<Window x:Class="ShibaevaManagementCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ShibaevaManagementCompany.Pages"
        Title="Управляющая компания" 
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/icon.ico"
        MinHeight="600" MinWidth="900">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#67BA80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderRadius" Value="5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Стиль для кнопок навигации -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F4E8D3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="White" CornerRadius="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логотип и название -->
                <Border Grid.Row="0" Padding="20" Background="#F4E8D3">
                    <StackPanel>
                        <Image Source="Resources/logo.png" 
                               Width="80" Height="80" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                        <TextBlock Text="Управляющая компания" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  TextAlignment="Center"
                                  Foreground="#333333"/>
                    </StackPanel>
                </Border>

                <!-- Меню навигации -->
                <StackPanel Grid.Row="1" Margin="10,20,10,0" Spacing="5">
                    <Button x:Name="btnHome" 
                           Content="Главная" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnHome_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnBuildings" 
                           Content="Жилой фонд" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnBuildings_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏢" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnApartments" 
                           Content="Квартиры" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnApartments_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnServiceRequests" 
                           Content="Заявки на ремонт" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnServiceRequests_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button x:Name="btnRequestHistory" 
                           Content="История заявок" 
                           Style="{StaticResource NavButtonStyle}"
                           Click="BtnRequestHistory_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>

                <!-- Информация о пользователе -->
                <Border Grid.Row="2" Padding="15" Background="#F4E8D3" CornerRadius="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Администратор" 
                                  FontWeight="Bold"
                                  Foreground="#333333"/>
                        <TextBlock Text="Управляющая компания" 
                                  FontSize="12"
                                  Foreground="#666666"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        
        <Border Grid.Column="1" Margin="10" CornerRadius="10" Background="White">
            <Frame x:Name="MainFrame" 
                  NavigationUIVisibility="Hidden"
                  BorderThickness="0"/>
        </Border>
    </Grid>
</Window>